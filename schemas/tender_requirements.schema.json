{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TenderRequirements",
  "type": "object",
  "required": ["bid_id", "requirements"],
  "properties": {
    "bid_id": { "type": "string" },
    "title": { "type": "string" },
    "closing_date": { "type": "string", "format": "date" },
    "requirements": {
      "type": "array",
      "items": { "$ref": "#/definitions/Requirement" }
    }
  },
  "definitions": {
    "Requirement": {
      "type": "object",
      "required": ["id", "category", "requirement", "citations"],
      "properties": {
        "id": { "type": "string" },
        "category": {
          "type": "string",
          "enum": [
            "eligibility",
            "sla",
            "technical",
            "financial",
            "documents",
            "submission",
            "other"
          ]
        },
        "requirement": { "type": "string" },
        "mandatory": { "type": "boolean" },
        "citations": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "citations.schema.json" }
        },
        "notes": { "type": "string" }
      }
    }
  }
}
